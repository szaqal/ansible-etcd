[Unit]
Description=etcd
After=network.target
StartLimitIntervalSec=0
[Service]

Environment=ETCD_DATA_DIR={{etcd_data_dir}}
Environment=ETCD_WAL_DIR={{etcd_wal_dir}}
Environment=ETCD_NAME={{ inventory_hostname  }}
Environment=ETCD_INITIAL_CLUSTER_TOKEN={{ etcd_cluster_token }}
Environment=ETCD_INITIAL_CLUSTER_STATE=new
Environment=ETCD_LISTEN_CLIENT_URLS={{ hostvars[inventory_hostname].ansible_ssh_host  }}:2379


Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=etcd

[Install]
WantedBy=multi-user.target